<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		tools:context="com.liuwang.myok.NativeJsonPraseActivity">
	
	<include layout="@layout/titlebar"/>
	
	<Button
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/bt_gson_tojavaobject"
			android:textSize="18sp"
			android:layout_margin="5dp"
			android:text="将JSON对象转化为JAVA对象"/>
	
	<Button
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/bt_gson_tojavalist"
			android:textSize="18sp"
			android:layout_margin="5dp"
			android:text="将JSON数组转化为JAVA集合"/>
	
	<Button
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/bt_gson_togsonobject"
			android:textSize="18sp"
			android:layout_margin="5dp"
			android:text="将JAVA对象转化为JSON对象"/>
	
	<Button
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/bt_gson_togsonlist"
			android:textSize="18sp"
			android:layout_margin="5dp"
			android:text="将JAVA数组转化为JSON集合"/>
	
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="18sp"
			android:textColor="@android:color/holo_blue_light"
			android:layout_margin="5dp"
			android:text="原始数据"/>
	
	<ScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent">
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">
			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textSize="18sp"
					android:id="@+id/tv_gson_original"/>
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="18sp"
					android:textColor="@android:color/holo_blue_light"
					android:layout_margin="5dp"
					android:text="转换后的数据"/>
			
			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textSize="18sp"
					android:id="@+id/tv_gson_last"/>
		</LinearLayout>
	</ScrollView>

</LinearLayout>
