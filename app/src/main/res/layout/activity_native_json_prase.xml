<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		tools:context="com.liuwang.myok.NativeJsonPraseActivity">

	<include layout="@layout/titlebar"/>

	<Button
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/bt_native_tojavaobject"
			android:textSize="18sp"
			android:layout_margin="5dp"
			android:text="将JSON对象转化为JAVA对象"/>

	<Button
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/bt_native_tojavalist"
			android:textSize="18sp"
			android:layout_margin="5dp"
			android:text="将JSON数组转化为JAVA集合"/>

	<Button
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/bt_native_complex"
			android:textSize="18sp"
			android:layout_margin="5dp"
			android:text="复杂JSON数据解析"/>

	<Button
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/bt_native_special"
			android:textSize="18sp"
			android:layout_margin="5dp"
			android:text="特殊JSON数据解析"/>

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="18sp"
			android:textColor="@android:color/holo_blue_light"
			android:layout_margin="5dp"
			android:text="原始数据"/>

	<ScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent">
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">
			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textSize="18sp"
					android:id="@+id/tv_native_original"/>
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="18sp"
					android:textColor="@android:color/holo_blue_light"
					android:layout_margin="5dp"
					android:text="转换后的数据"/>
			
			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textSize="18sp"
					android:id="@+id/tv_native_last"/>
		</LinearLayout>
	</ScrollView>

</LinearLayout>
